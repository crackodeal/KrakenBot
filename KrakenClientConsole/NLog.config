<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="${basedir}/logs/nlog-internal.log">
  <targets>
    <target name="AsyncFileLog" xsi:type="AsyncWrapper">
      <target xsi:type="File"
              name="FileLog"
              fileName="${basedir}/logs/${shortdate}.log"
              layout="${longdate} ${uppercase:${level}} ${message}"
              archiveFileName="${basedir}/logs/${shortdate}.log"
              archiveEvery="Hour"
              maxArchiveFiles="24"/>
    </target>
  </targets>
  <rules>
    <logger name="*" minlevel="Debug" writeTo="AsyncFileLog" />
  </rules>
</nlog>
